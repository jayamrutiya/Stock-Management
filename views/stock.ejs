<%- include('./include/header.ejs') %>

    <section id="main">
      <div class="container">
        <div class="row">
            <%- include('./include/side.ejs') %>
          <div class="col-md-9">
            <form action="/search" method="POST">
            <div class="row">
              <div class="col-md-9">
              <input type="text" name="searchid" class="form-control">
            </div>
            <div class="col-md-3">
              <button type="submit" class="btn btn-danger">Search</button></div>
            </div>
          </form>
            <br>
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Stock</h3>
              </div>
              <div class="panel-body">
                <%if(db_rows_array.length > 0){%>
                  <table class="table table-striped table-hover">
                        <tr>
                          <th>Product Name</th>
                          <th>UOM</th>
                          <th>Quantity</th>
                          <th></th>
                          
                        </tr>
                        <% for(var i=0; i<db_rows_array.length; i++){
                          %>
                        <tr>
                          <td><%= db_rows_array[i].productname %></td>
                          <td><%= db_rows_array[i].uom %></td>
                          <td><%= db_rows_array[i].quantity %></td>
                          
                          <td>   
                            <a class="btn btn-danger" href='/setzero/<%= db_rows_array[i].sid %>'>Set 0</a>  
                          
                          </td>
                        </tr>
                        <%}%>
                      </table>
                      <%}%>
                
              </div>
              </div>

          </div>
        </div>
      </div>
    </section>

    <%- include('./include/end.ejs') %>