<%- include('./include/header.ejs') %>

    <section id="main">
      <div class="container">
        <div class="row">
            <%- include('./include/side.ejs') %>
          <div class="col-md-9">
            <!-- add new product -->
            <div class="row">
              <div class="col-md-6">
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Add Product</h3>
              </div>
              <div class="panel-body">
                <form action="\addproduct" method="POST">
                <div class="row">
                      <div class="col-md-12 form-group">
                          <label>Product Name</label>
                          <input class="form-control" type="text" name="productname" placeholder="Product Name" required>
                      </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label>&nbsp;</label>
                        <button type="submit" name="submit" class="btn main-color-bg form-control">ADD</button>
                    </div>
                </div>
                </form>
                <br>
              </div>
            
              </div>
          </div>
          <div class="col-md-6">
              <div class="panel panel-default">
                  <div class="panel-heading main-color-bg">
                    <h3 class="panel-title">Unit Of Measure</h3>
                  </div>
                  <div class="panel-body">
                    <form action="\adduom" method="POST">
                    <div class="row">
                          <div class="col-md-12 form-group">
                              <label>UOM</label>
                              <input class="form-control" type="text" name="uom" placeholder="Unit Of Measure" required>
                          </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>&nbsp;</label>
                            <button type="submit" name="submit" class="btn main-color-bg form-control">ADD</button>
                        </div>
                    </div>
                    </form>
                    <br>
                  </div>
                
                  </div>
          </div>
        </div>
        <div class="row">
        <div class="col-md-6">
            
            
              <!-- list of uom -->
            <div class="panel panel-default">
                <div class="panel-heading main-color-bg">
                  <h3 class="panel-title">Products List</h3>
                </div>
                <div class="panel-body">
                  
                  <br>
                  
                  <%if(array){%>
                    
                  <table class="table table-striped table-hover">
                        <tr>
                          <th>Name</th>
                          <th></th>
                        </tr>
                        <% array.forEach(function(user){%>
                          
                        <tr>
                          <td><%= user.productname %></td>
                          
                          <td>
                            <a class="btn btn-default" href='/editproduct/<%= user.pid %>'>Edit</a> 
                             
                            
                          
                            <a class="btn btn-danger" href='/deleteproduct/<%= user.pid %>'>Delete</a> 
                          
                          </td>
                        </tr>
                      
                        <%})%>
                      
                      </table>
                    
                      <%}%>
                  
                </div>
                </div>

          </div>
          <div class="col-md-6">
            <!-- list of product -->
            <div class="panel panel-default">
                <div class="panel-heading main-color-bg">
                  <h3 class="panel-title">UOM's List</h3>
                </div>
                <div class="panel-body">
                  
                  <br>
                  <%if(db_rows_array.length > 0){%>
                    <table class="table table-striped table-hover">
                          <tr>
                            <th>Name</th>
                            <th></th>
                          </tr>
                          <% for(var i=0; i<db_rows_array.length; i++){
                            %>
                          <tr>
                            <td><%= db_rows_array[i].uom %></td>
                            
                            <td><a class="btn btn-default" href='/edituom/<%= db_rows_array[i].uid %>'>Edit</a> 
                              <a class="btn btn-danger" href='/deleteuom/<%= db_rows_array[i].uid %>'>Delete</a> 
                            
                            </td>
                          </tr>
                          <%}%>
                        </table>
                        <%}%>
                </div>
                </div>
          </div>
        </div>
        </div>
        </div>
      </div>
    </section>

    <%- include('./include/end.ejs') %>
